{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveValueImports": false,
    "paths": {
      "~/commands/*": [
        "./src/commands/*"
      ],
      "~/config/*": [
        "./src/config/*"
      ],
      "~/loaders/*": [
        "./src/loaders/*"
      ],
      "~/services/*": [
        "./src/services/*"
      ]
    }
  }
}